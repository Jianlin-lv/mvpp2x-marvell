/*
 * Device Tree file for Marvell Armada 7040 RZ development board
 */

#include "armada-7040rz-db.dtsi"

/ {
	model = "Marvell Armada-7040-RZ development board router setup";
	compatible = "marvell,armada7040-rz-db-router";
	#address-cells = <2>;
	#size-cells = <2>;

	chosen { };
	cpn-110-master {
		config-space {
			mdio {
				#address-cells = <1>;
				#size-cells = <0>;
				
				phy1: ethernet-phy@1 {
					reg = <1>;
				};

				phy2: ethernet-phy@2 {
					reg = <2>;
				};
				phy3: ethernet-phy@3 {
					reg = <3>;
				};
			};			
			gop {
				emac0: mac0 {
					phy-mode = "sgmii";
					phy = <&phy1>;
				};
				emac2: mac2 {
					phy-mode = "rgmii"; /* rgmii-0 */
					phy = <&phy2>;
				};
				emac3: mac3 {
					phy-mode = "rgmii"; /* rgmii-1 */
					phy = <&phy3>;
				};
			};
		};
	};
	/* Disable/Enable I/Os supported by this setup */

};
