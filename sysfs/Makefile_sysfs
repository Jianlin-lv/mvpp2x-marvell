#INCLUDE_DIRS	+= -I$(MACH_MVEBU_DIR)/include


#ccflags-y	+= $(INCLUDE_DIRS)

#export INCLUDE_DIRS



all:
	make -C ${KDIR} M=$(M) modules

clean:
	make -C ${KDIR} SUBDIRS=$(M) clean


